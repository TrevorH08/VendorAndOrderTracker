@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;

<h3>@vendor.Name 's Orders: </h3>

<ol>
@foreach (Order order in @Model["items"])
{
  <li><a href='/vendors/@Model["category"].Id/orders/@item.Id'>@item.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to Vendor List</a></p>
<p><a href='/'>Return to Dashboard</a></p>